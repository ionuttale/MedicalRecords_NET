@{
    ViewData["Title"] = "Edit medicine";
}

@model Models.Medicine

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Edit Medicine</title>
    <link rel="stylesheet" href="@Url.Content("~/css/patients.css")">
</head>
<body class="medicines">
    <div class="container">
        <h1>Edit Medicine Information</h1>

        <form method="post" action="@Url.Action("Edit", "Medicines")">
            <input type="hidden" name="Id" value="@Model.Id" />

            <label for="name">Name:</label>
            <input type="text" name="Name" value="@Model.Name" required />

            <label for="producer">Producer:</label>
            <input type="text" name="Producer" value="@Model.Producer" required />

            <label for="price">Price:</label>
            <input type="text" name="Price" value="@Model.Price" required />

            <label for="expiration_date">Expiration Date:</label>
            <input type="date" id="expiration_date" name="ExpirationDate" value="@Model.ExpirationDate.ToString("yyyy-MM-dd")" required />

            <label for="quantity">Quantity:</label>
            <input type="text" name="Quantity" value="@Model.Quantity" required />

            <label for="category">Category:</label>
            <input type="text" name="Category" value="@Model.Category" required />

            <label for="medical_prescription">Medical Prescription:</label>
            @Html.DropDownListFor(
                model => model.MedicalPrescription,
                new SelectList(
                    new List<string> {"Yes", "No" }, // Include default option
                    Model.MedicalPrescription), // Set the selected value based on model
                new { @class = "form-control" } // Add any additional attributes like class
            )

            <div class="form-footer">
                <button type="submit">Save Changes</button>
            </div>
        </form>

    </div>

    <script src="@Url.Content("~/js/patients.js")"></script>
</body>
</html>
