@{
    ViewData["Title"] = "Edit patient";
}

@model Models.Patient

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Edit Patient</title>
    <link rel="stylesheet" href="@Url.Content("~/css/patients.css")">
</head>
<body class="patients">
    <div class="container">
        <h1>Edit Patient Information</h1>

        <form id="updateForm" method="post" action="@Url.Action("Edit", "Patients")">
            <label for="name">Name:</label>
            <input type="text" id="name" value="@Model.Name" name="name" required>

            <label for="surname">Surname:</label>
            <input type="text" id="surname" value="@Model.Surname" name="surname" required>

            <label for="phone_number">Phone Number:</label>
            <input type="text" id="phone_number" value="@Model.PhoneNumber" name="PhoneNumber" required>

            <label for="address">Address:</label>
            <input type="text" id="address" value="@Model.Address" name="address" required>

            <label for="email">Email:</label>
            <input type="email" id="email" value="@Model.Email" name="email" required>

            <label for="diagnosis">Diagnosis:</label>
            <input type="text" id="diagnosis" value="@Model.Diagnosis" name="diagnosis">

            <div class="form-footer">
                <button type="submit">Save Changes</button>
            </div>
        </form>
    </div>

    <script src="@Url.Content("~/js/patients.js")"></script>
</body>
</html>
